    <script>

        $(document).ready(function () {
            $('.slider.mobile').slider({
                height: 400,
                duration: 500,
                interval: 3000,
            });
            $('.slider.desktop').slider({
                height: 550,
                duration: 500,
                interval: 3000,
            });
            $('.collapsible').collapsible();
            $('.parallax').parallax();
            $('.sidenav').sidenav();
            $('.scrollspy').scrollSpy();
        });


        document.addEventListener('DOMContentLoaded',function(){
            var drop = document.querySelectorAll('.dropdown-trigger')
            M.Dropdown.init(drop,{
                coverTrigger:false,
                closeOnClick:false,
                hover:true,
                inDuration:500,
                outDuration:500
            })
        })
        document.addEventListener('DOMContentLoaded', function () {
            var collapse = document.querySelectorAll('.collapsible');
            var instances = M.Collapsible.init(collapse);
        });
     
     
     

        //BackToTop
        var btn = $('#backtotop');

        $(window).scroll(function () {
            if ($(window).scrollTop() > 300) {
                btn.addClass('show');
            } else {
                btn.removeClass('show');
            }
        });

        btn.on('click', function (e) {
            e.preventDefault();
            $('html, body').animate({ scrollTop: 0 }, '300');
        });
        //back to top end

        document.addEventListener('DOMContentLoaded', function () {
            const inputField = document.querySelectorAll('.autocomplete');
            M.Autocomplete.init(inputField, {
                data: {
                    "Apple": null,
                    "Microsoft": null,
                    "Google": null,
                    "Amazon": null,
                    "Facebook": null,
                    "Twitter": null,
                    "Instagram": null,
                },
                limit: 5
                
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            //modals
            const box = document.querySelectorAll('.modal');
            M.Modal.init(box, { opacity: 0.6, inDuration: 300, outDuration: 375, dismissible: false });

        });

    </script>
