<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Create Category</h5>

                <form asp-action="Create" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <label asp-for="Name" for="validationCustom01" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" id="validationCustom01" required/>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please choose a username.
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
           
                      
                   


                    <div class="row mb-3">
                        <legend class="col-form-label col-sm-2 pt-0">Active</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ImageNameUrl" class="col-sm-2 col-form-label">File Upload</label>
                        <div class="col-sm-10">

                            <input asp-for="ImageNameUrl" type="file" class="form-control" />
                            <span asp-validation-for="ImageNameUrl" class="text-danger"></span>
                        </div>


                    </div>

                    <div class="form-group m-2">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a class="btn btn-primary" asp-action="Index">Back to List</a>
                    </div>
                </form>







            </div>
        </div>
    </div>
</div>


